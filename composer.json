{
    "name": "danskernesdigitalebibliotek/ddb-cover-service-upload",
    "description": "Covers upload service for DDB CoverService",
    "type": "project",
    "license": "AGPL-3.0-only",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "api-platform/api-pack": "^1.2",
        "danskernesdigitalebibliotek/agency-auth-bundle": "^2.0",
        "doctrine/annotations": "^1.10",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "predis/predis": "^1.1",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/filesystem": "4.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "4.4.*",
        "symfony/http-client": "4.4.*",
        "symfony/messenger": "4.4.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/security-bundle": "4.4.*",
        "symfony/yaml": "4.4.*",
        "vich/uploader-bundle": "^1.12"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.11",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^4.4",
        "symfony/css-selector": "^4.4",
        "symfony/maker-bundle": "^1.14",
        "symfony/phpunit-bridge": "^5.3",
        "symfony/profiler-pack": "^1.0",
        "vimeo/psalm": "^4.8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "ocramius/package-versions": true,
            "symfony/flex": true,
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "docker-build": [
            "bin/console --env=prod assets:install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check-coding-standards": [
            "php-cs-fixer --config=.php_cs.dist fix --dry-run --format=checkstyle"
        ],
        "apply-coding-standards": [
            "php-cs-fixer --config=.php_cs.dist fix"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "update-api-spec": [
            "bin/console api:openapi:export --output=public/api-spec-v1.yaml --yaml --no-interaction"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
